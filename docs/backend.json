{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the trading platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "User's display name."
        },
        "role": {
          "type": "string",
          "description": "User's role.",
          "enum": [
            "FREE_USER",
            "PREMIUM_USER",
            "ADMIN"
          ]
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the user account was created.",
          "format": "date-time"
        },
        "subscription": {
          "type": "object",
          "description": "User's subscription details.",
          "properties": {
            "planId": {
              "type": "string",
              "description": "The ID of the active subscription plan (e.g., 'monthly', 'annual')."
            },
            "status": {
              "type": "string",
              "description": "The status of the subscription.",
              "enum": [
                "ACTIVE",
                "INACTIVE",
                "CANCELLED",
                "PAST_DUE"
              ]
            },
            "startDate": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of when the subscription started."
            },
            "endDate": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of when the subscription ends or ended."
            },
            "renewsOn": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of when the subscription will renew."
            }
          }
        }
      },
      "required": [
        "id",
        "email",
        "role",
        "createdAt"
      ]
    },
    "Signal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Signal",
      "type": "object",
      "description": "Represents a trading signal generated by the AI engine.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the signal."
        },
        "symbol": {
          "type": "string",
          "description": "Trading pair symbol (e.g., XAUUSD)."
        },
        "action": {
          "type": "string",
          "description": "Action to take (BUY or SELL)."
        },
        "entryPrice": {
          "type": "number",
          "description": "Price at which the signal was generated."
        },
        "takeProfit1": {
          "type": "number",
          "description": "First take-profit level (1:2 ratio)."
        },
        "takeProfit2": {
          "type": "number",
          "description": "Second take-profit level (1:4 ratio)."
        },
        "stopLoss": {
          "type": "number",
          "description": "Stop-loss level."
        },
        "timeframe": {
          "type": "string",
          "description": "Timeframe of the signal (e.g., 5m, 15m, 1h)."
        },
        "confidence": {
          "type": "number",
          "description": "Confidence level of the signal (0-100)."
        },
        "reason": {
          "type": "string",
          "description": "Reasoning behind the signal generation."
        },
        "status": {
          "type": "string",
          "description": "Current status of the signal (ACTIVE, COMPLETED, CANCELLED)."
        },
        "resultType": {
          "type": "string",
          "description": "Result of the signal (WIN, LOSS, PARTIAL)."
        },
        "hitPrice": {
          "type": "number",
          "description": "Price at which the signal hit TP or SL."
        },
        "hitAt": {
          "type": "string",
          "description": "Timestamp of when the signal hit TP or SL.",
          "format": "date-time"
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Signal)"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the signal was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "symbol",
        "action",
        "entryPrice",
        "takeProfit1",
        "takeProfit2",
        "stopLoss",
        "timeframe",
        "confidence",
        "reason",
        "status",
        "userId",
        "createdAt"
      ]
    },
    "Payment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Payment",
      "type": "object",
      "description": "Represents a payment submission for a premium upgrade.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the payment record."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who made the payment."
        },
        "userEmail": {
          "type": "string",
          "description": "The email of the user for easier reference."
        },
        "planId": {
          "type": "string",
          "description": "The ID of the plan being purchased (e.g., 'monthly', 'annual')."
        },
        "amount": {
          "type": "number",
          "description": "The amount paid in USDT."
        },
        "transactionId": {
          "type": "string",
          "description": "The blockchain transaction hash/ID provided by the user."
        },
        "paymentProofUrl": {
            "type": "string",
            "description": "URL to the screenshot of the payment confirmation."
        },
        "status": {
          "type": "string",
          "description": "The status of the payment verification.",
          "enum": [
            "PENDING",
            "APPROVED",
            "REJECTED"
          ]
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the user submitted the payment proof."
        },
        "reviewedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when an admin reviewed the payment."
        },
        "reviewerId": {
          "type": "string",
          "description": "The ID of the admin who reviewed the payment."
        }
      },
      "required": [
        "id",
        "userId",
        "userEmail",
        "planId",
        "amount",
        "transactionId",
        "paymentProofUrl",
        "status",
        "submittedAt"
      ]
    },
    "Plan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Plan",
      "type": "object",
      "description": "Represents a subscription plan.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the plan (e.g., 'monthly', 'annual')."
        },
        "name": {
          "type": "string",
          "description": "The display name of the plan (e.g., 'Monthly Premium')."
        },
        "price": {
          "type": "number",
          "description": "The price of the plan in USDT."
        },
        "interval": {
          "type": "string",
          "description": "The billing interval.",
          "enum": [
            "month",
            "year"
          ]
        },
        "description": {
          "type": "string",
          "description": "A short description of the plan."
        }
      },
      "required": [
        "id",
        "name",
        "price",
        "interval"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. Includes standard user information (email, name, role, isActive, createdAt).",
          "params": [
            {
              "name": "userId",
              "description": "Unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/signals/{signalId}",
        "definition": {
          "entityName": "Signal",
          "schema": {
            "$ref": "#/backend/entities/Signal"
          },
          "description": "Stores trading signals generated for each user. Path-based ownership enables secure list operations and simplifies security rules. Each signal includes details like action, entryPrice, takeProfit levels, stopLoss, timeframe, confidence, and analysis reasoning.",
          "params": [
            {
              "name": "userId",
              "description": "Unique identifier for the user."
            },
            {
              "name": "signalId",
              "description": "Unique identifier for the signal."
            }
          ]
        }
      },
      {
        "path": "/payments/{paymentId}",
        "definition": {
          "entityName": "Payment",
          "schema": {
            "$ref": "#/backend/entities/Payment"
          },
          "description": "Stores payment submissions from users for manual verification by admins.",
          "params": [
            {
              "name": "paymentId",
              "description": "Unique identifier for the payment submission."
            }
          ]
        }
      },
      {
        "path": "/plans/{planId}",
        "definition": {
          "entityName": "Plan",
          "schema": {
            "$ref": "#/backend/entities/Plan"
          },
          "description": "Stores available subscription plans (e.g., monthly, annual).",
          "params": [
            {
              "name": "planId",
              "description": "Unique identifier for the plan."
            }
          ]
        }
      }
    ]
  }
}
